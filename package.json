{
  "name": "tailwind-rainbow",
  "displayName": "Tailwind Rainbow",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tailwind-rainbow.selectTheme",
        "title": "Select Theme",
        "category": "Tailwind Rainbow"
      }
    ],
    "configuration": {
      "title": "Tailwind Rainbow",
      "properties": {
        "tailwindRainbow.theme": {
          "type": "string",
          "enum": ["default", "neon"],
          "default": "default",
          "description": "Select the color theme for Tailwind prefixes"
        },
        "tailwindRainbow.prefixes": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "color": {
                "type": "string",
                "description": "Color for the prefix (hex format)"
              },
              "enabled": {
                "type": "boolean",
                "description": "Enable/disable this prefix"
              },
              "fontWeight": {
                "type": "string",
                "enum": ["normal", "bold"],
                "description": "Font weight for the prefix"
              }
            }
          },
          "default": {},
          "description": "Custom prefix configurations that override the theme defaults"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "packageManager": "pnpm@9.0.6+sha1.648f6014eb363abb36618f2ba59282a9eeb3e879"
}
