{
  "name": "tailwind-rainbow",
  "displayName": "Tailwind Rainbow",
  "description": "",
  "version": "0.0.1",
  "publisher": "esdete2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tailwind-rainbow.selectTheme",
        "title": "Select Theme",
        "category": "Tailwind Rainbow"
      },
      {
        "command": "tailwind-rainbow.loadThemes",
        "title": "Load Themes",
        "category": "Tailwind Rainbow"
      }
    ],
    "configuration": {
      "title": "Tailwind Rainbow",
      "properties": {
        "tailwindRainbow.theme": {
          "type": "string",
          "default": "default",
          "markdownDescription": "Theme name. Built-in themes: `default`, `neon`"
        },
        "tailwindRainbow.themes": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string",
                  "description": "Color for the prefix (hex format)"
                },
                "enabled": {
                  "type": "boolean",
                  "description": "Enable/disable this prefix"
                },
                "fontWeight": {
                  "type": "string",
                  "enum": [
                    "normal",
                    "bold",
                    "lighter",
                    "bolder",
                    "thin",
                    "extralight",
                    "light",
                    "medium",
                    "semibold",
                    "extrabold",
                    "black",
                    "100",
                    "200",
                    "300",
                    "400",
                    "500",
                    "600",
                    "700",
                    "800",
                    "900"
                  ],
                  "description": "Font weight for the prefix"
                }
              }
            },
            "description": "Theme configuration"
          },
          "default": {},
          "description": "Custom themes or overrides for existing themes"
        },
        "tailwindRainbow.patterns": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "regex": {
                "type": "string",
                "description": "Regular expression to match class names"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable/disable this pattern"
              }
            }
          },
          "default": {
            "default": {
              "regex": "(['\"`])((?:(?!\\1).)*?)\\1",
              "enabled": true
            }
          },
          "description": "Custom regex patterns to match class names"
        },
        "tailwindRainbow.languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "html",
            "javascript",
            "typescript",
            "javascriptreact",
            "typescriptreact",
            "vue",
            "svelte",
            "astro",
            "php"
          ],
          "description": "Language identifiers the extension should be active for"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.0.6+sha1.648f6014eb363abb36618f2ba59282a9eeb3e879"
}
