{
  "name": "tailwind-rainbow",
  "displayName": "Tailwind Rainbow",
  "description": "",
  "version": "0.0.1",
  "publisher": "esdete2",
  "repository": {
    "type": "git",
    "url": "https://github.com/esdete2/tailwind-rainbow"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "build": "vsce package --no-dependencies -o tailwind-rainbow.vsix",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run build",
    "lint": "eslint src",
    "test": "rm -rf .vscode-test/user-data && rm -rf .vscode-test/extensions && node ./out/test/runTest.js",
    "install:extension": "pnpm run build && code --install-extension tailwind-rainbow.vsix"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "glob": "^11.0.1",
    "jest": "^29.7.0",
    "mocha": "^11.1.0",
    "path": "^0.12.7",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tailwind-rainbow.selectTheme",
        "title": "Select Theme",
        "category": "Tailwind Rainbow"
      },
      {
        "command": "tailwind-rainbow.loadThemes",
        "title": "Load Themes",
        "category": "Tailwind Rainbow"
      }
    ],
    "configuration": {
      "title": "Tailwind Rainbow",
      "properties": {
        "tailwindRainbow.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "tailwindRainbow.theme": {
          "type": "string",
          "default": "default",
          "markdownDescription": "Theme name. Built-in themes: `default`, `synthwave`"
        },
        "tailwindRainbow.themes": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string",
                  "description": "Color for the prefix (hex format)"
                },
                "enabled": {
                  "type": "boolean",
                  "description": "Enable/disable this prefix"
                },
                "fontWeight": {
                  "type": "string",
                  "enum": [
                    "normal",
                    "bold",
                    "lighter",
                    "bolder",
                    "thin",
                    "extralight",
                    "light",
                    "medium",
                    "semibold",
                    "extrabold",
                    "black",
                    "100",
                    "200",
                    "300",
                    "400",
                    "500",
                    "600",
                    "700",
                    "800",
                    "900"
                  ],
                  "description": "Font weight for the prefix"
                }
              }
            },
            "description": "Theme configuration"
          },
          "default": {},
          "description": "Custom themes or overrides for existing themes"
        },
        "tailwindRainbow.patterns": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "regex": {
                "type": "string",
                "description": "Regular expression to match class names"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable/disable this pattern"
              }
            }
          },
          "default": {
            "default": {
              "regex": "(?<=(['`\"]))((?:[^'`\"\\\\]|\\\\.)*?:[^'`\"]*(?:\\[[^\\]]*\\][^'`\"]*)*?)(?<!\\\\)(?=\\1)",
              "enabled": true
            }
          },
          "description": "Custom regex patterns to match class names"
        },
        "tailwindRainbow.languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "html",
            "javascript",
            "typescript",
            "javascriptreact",
            "typescriptreact",
            "vue",
            "svelte",
            "astro",
            "php"
          ],
          "description": "Language identifiers the extension should be active for"
        }
      }
    }
  }
}
